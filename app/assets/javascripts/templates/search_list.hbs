{{#each regions as |countries region|}}
  <h3 class="c-card-title -border-1 -color-5 -normal single-list-title">{{region}}</h3>
  <div class="list-grid">
    {{#each countries as |country|}}
      <div class="item -1-2 -tablet-1-3">
        <a class="item-link" href="/countries/{{country.country_iso_3}}">{{country.name}}</a>
      </div>
    {{/each}}
  </div>
{{/each}}
