<ul class="list">
  <li>
    <button class="item btn-mapmenu-action {{color}}" data-action="layer">
      <svg class="c-svg {{color}}">
        <use xlink:href="#icon-layers"></use>
      </svg>
      Layers
    </button>
  </li>

  {{#if userId}}
    <li>
      <a href="/network/{{userId}}/{{data}}/new" class="item {{color}}">
        <svg class="c-svg {{color}}">
          <use xlink:href="#icon-add"></use>
        </svg>
        Add {{dataSingular}}
      </a>
    </li>
  {{/if}}

  <li>
    <button class="item btn-mapmenu-action {{color}}" data-action="share">
      <svg class="c-svg {{color}}">
        <use xlink:href="#icon-save"></use>
      </svg>
      Share map
    </button>
  </li>
</ul>

