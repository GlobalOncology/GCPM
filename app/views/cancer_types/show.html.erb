<%
  @CANCER_TYPE_ID = false
  if (@cancer_type.id)
    @CANCER_TYPE_ID = @cancer_type.id
  end
%>
<script> var CANCER_TYPE_ID = <%= @CANCER_TYPE_ID %>;</script>
<section class="country">
  <div class="c-section-intro -color-4">
    <div id="map" class="map c-map -detail">
      <div class="c-map-intro-legend">
        <ul class="legend-list">
          <li class="item"><div class="icon -first"></div><%= t 'project_leads' %></li>
          <li class="item"><div class="icon -second"></div><%= t 'collaborators' %></li>
        </ul>
        <div class="viel"></div>
      </div>
    </div>

    <div class="intro-info">
      <div class="info">
        <h1 class="c-title -big"><%= @cancer_type.name %></h1>
        <div class="c-numbers-grid">
          <div class="number-info">
            <label class="title">Projects</label>
            <p class="number"><%= @projectsCount %></p>
          </div>
          <!-- <div class="number-info">
            <label class="title">Organizations</label>
            <p class="number"> - </p>
          </div> -->
          <div class="number-info">
            <label class="title">Events</label>
            <p class="number"><%= @eventsCount %></p>
          </div>
          <div class="number-info">
            <label class="title">Daly datasets</label>
            <p class="number">0</p>
          </div>
        </div>
      </div>
      <div class="c-buttons-group">
        <a href="#" class="c-button -inverse -filled btn-large">Follow</a>
        <div class="row-buttons">
          <a href="#" class="c-button -inverse">+ Project</a>
          <a href="#" class="c-button -inverse">+ Post</a>
          <a href="#" class="c-button -inverse">+ Event</a>
        </div>
      </div>
    </div>
    <div class="section-tabnav">
      <div id="dataTabNav" class="c-tabnav">
        <div class="row collapse">
          <div class="column small-12">
            <ul class="tabnav-list">
               <% @filters.each do |filter| %>
                <%# @class = !params['type'] and filter == "projects" ? "-active" : active_param?('type', filter) %>
                <li class="tabnav-item">
                  <a class="js-btn-mapmenu-type" href="#" data-type="<%= filter %>"><%= t (filter) %></a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

