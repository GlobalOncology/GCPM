<% if items && items.size() > 0 %>
  <div class="row collapse">
    <% items.each do |c| %>
      <div class="column small-12">
        <div class="c-card -events">
          <% conversation_person = conversation_person(c) %>
          <h2><%= c.subject %></h2>
          <ul>
            <% c.messages.each do |m| %>
              <li>
                <%= m.body %>
              </li>
            <% end %>
          </ul>

          <div class="details">
            <span><%= conversation_person.name %></span>
            <span><%= c.created_at.strftime("%d.%m.%Y") %> <%= c.created_at.strftime("%H:%M") %></span>
          </div>
          <p></p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <p>No messages</p>
      </div>
    </div>
  </div>
<% end %>

<% if more %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <% page = @page + 1 %>
        <%= link_to (t 'show_more'),
          {
            :params => request.query_parameters.merge({ page: page })
          },
          class: "c-btn -circle",
          id: 'showMoreButton',
          remote: true
        %>
      </div>
    </div>
  </div>
<% end %>
