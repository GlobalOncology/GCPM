  <h2 class="c-title -big">55</h3>
</div>

<div class="card -1-2 -tablet-1-4">
  <h4 class="c-card-title -border-2"><%= t 'non_melanoma_skin_cancer' %></h4>
  <h2 class="c-title -big">215</h3>
</div>

<div class="card -1-2 -tablet-1-4">
  <h4 class="c-card-title -border-2"><%= t 'trachea_bronchus_and_lung' %></h4>
  <h2 class="c-title -big">350</h3>
</div>

<div class="card -1-2 -tablet-1-4">
  <h4 class="c-card-title -border-3"><%= t 'other' %></h4>
  <h2 class="c-title -big">1047</h3>
</div>

<% @projects.each do |p| %>
  <div class="card -mobile-large-1-2 -tablet-1-3">
    <h4 class="c-card-title -border-2"><%= p.project_leads.first.name %></h4>
    <a>
      <h3 class="c-title"><%= p.title %></h3>
    </a>
    <p><%= truncate(p.summary, :length => 300) %></p>
  </div>
<% end %>

<div class="c-pagination-button">
  <%= link_to (t 'show_more'),
          map_path(request.query_parameters.merge({ limit: (params['limit'] ? params['limit'].to_i + 1 : 2 )  })),
          class: "circle-button",
          remote: true,
          data: {magic: true} %>
</div>
