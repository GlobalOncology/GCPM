<div class="c-section-intro">
  <div class="c-map-breadcrumbs">
    <div class="row collapse">
      <div class="column small-12">
        <div id="breadcrumbs"></div>
      </div>
    </div>
  </div>

  <!-- <button id="btn-clear-filters" class="btn-reset-filters c-button -filled -inverse">Clear filters</button> -->
  <div id="map" class="c-map"></div>

  <!-- <div id="map-tooltip" class="c-map-tooltip"></div> -->

  <div id="dataTabNav" class="c-tabnav">
    <div class="row collapse">
      <div class="column small-12">
        <ul class="tabnav-list">
           <% @filters.each do |filter| %>
            <%# @class = !params['type'] and filter == "projects" ? "-active" : active_param?('type', filter) %>
            <li class="tabnav-item">
              <a class="js-btn-mapmenu-type" href="#" data-type="<%= filter %>"><%= t (filter) %></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


<!-- <div id="map-layers-tooltip" class="c-tooltip -tip-left"></div> -->

<!-- toolbar -->
<div id="toolbar" class="c-toolbar"></div>

<!-- c-map-share -->
<%# render partial: "map-share" %>

<!-- c-map-tooltips -->
<%# render partial: "map-tooltips" %>

<!-- c-grid-proyects -->
<div class="c-card-grid" id="content">
  <%= render('map/' + @current_type) %>
</div>

<div class="c-card-grid">
<% @realLimit = params['limit'] ? params['limit'].to_i : 1 %>
  <% if (@realLimit * @limit) < @projectsCount %>
    <div class="c-pagination-button">
      <%= link_to (t 'show_more'),
              map_path(request.query_parameters.merge({ limit: (params['limit'] ? params['limit'].to_i + 1 : 2 )  })),
              class: "circle-button",
              remote: true,
              data: {magic: true} %>
    </div>
  <% end %>
</div>
