<% if items && items.size() > 0 %>
  <div class="row collapse">
    <% items.each do |e| %>
      <div class="column small-12 medium-4">
        <div class="c-card -person">
          <h2><a href="/investigators/<%=e.id%>"><%=e.name%></a></h2>
          <% if e.email? && e.email != 'Not Provided' %>
            <h3><a href="mailto:<%= e.email %>"><%= e.email %></a></h3>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <p>No investigators</p>
      </div>
    </div>
  </div>
<% end %>

<% if more %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <% page = @page + 1 %>
        <%= link_to (t 'show_more'),
          {:path => request.path,
          :params => request.query_parameters.merge({ page: page })},
          class: "c-btn -circle",
          id: 'showMoreButton',
          remote: true
        %>
      </div>
    </div>
  </div>
<% end %>
