<% if items && items.size() > 0 %>
  <div class="row collapse">
    <% items.each do |e| %>
      <div class="column small-12 medium-4">
        <div class="c-card -person">
          <div class="c-avatar -ph -mg-bt"
               style="<% if e.user.present? %>
                        background-image: url(<%= e.user.avatar_url(:thumb) %>)
                      <% end %>">
          </div>
          <h2><%= link_to e.name, investigator_path(e.slug_or_id) %></h2>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <p>No investigators</p>
      </div>
    </div>
  </div>
<% end %>

<% if more %>
  <div class="row collapse">
    <div class="column small-12">
      <div class="c-card">
        <% page = @page + 1 %>
        <%= link_to (t 'show_more'),
          {
            :params => request.query_parameters.merge({ page: page })
          },
          class: "c-btn -circle",
          id: 'showMoreButton',
          remote: true
        %>
      </div>
    </div>
  </div>
<% end %>
