<% title @event.title %>

<section class="l-app -full">
  <div class="l-app-map">
    <div id="map" class="c-map"></div>
  </div>
  <%= render "shared/legend" %>
  <div class="l-app-title">
    <div class="wrapper">
      <div class="row collapse">
        <div class="column small-8">
          <h1><%= @event.title %></h1>
        </div>
      </div>
    </div>
  </div>

  <div class="l-app-navbar">
  <div class="wrapper">
    <div class="row collapse">
      <div class="column small-6">
        <ul class="c-tabnav" id="dataTabNav">
           <% @filters.each do |filter| %>
            <li class="tabnav-item">
              <%= link_to t(filter),
                project_path(request.query_parameters.merge({ data: filter })),
                class: "js-btn-mapmenu-type",
                remote: true,
                data: { datatype: filter }
              %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="column small-6">
        <div id="toolbar"></div>
      </div>
    </div>
  </div>
</div>
</section>

<div class="l-grid">
  <div class="wrapper">
    <div class="row collapse">
      <div class="column small-8">
        <div class="l-content">
          <article class="l-content-article">
            <%= @event.description.html_safe %>
          </article>
        </div>
      </div>
      <div class="column small-4">
        <aside class="l-sidebar">
          <div class="sidebar-item">
            <h3><%= t 'location' %>(s)</h3>
            <ul class="c-list">
            <% iso = Country.find_by(country_name: @event.country).country_iso_3 %>
              <li class="list-item"><%= link_to "#{@event.city} , #{@event.country}", "/countries/#{iso}" %></li>
            </ul>
          </div>
          <% if @event.participants %>
            <div class="sidebar-item">
              <h3><%= t 'participants' %>(s)</h3>
              <ul class="c-list">
                <% @event.participants.split(',').each do |p| %>
                  <% participant = p[0] === ' ' ? p.slice(1, p.length-1) : p %>
                  <% id = Investigator.find_by(name: participant).id %>
                  <li class="list-item"><%= link_to "#{participant}", "/investigators/#{id}" %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </aside>
      </div>
    </div>
  </div>
</div>
