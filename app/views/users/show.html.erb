
<section class="country">
  <div class="c-section-intro -color-4">
    <div id="map" class="map c-map -detail">
      <div class="c-map-intro-legend">
        <ul class="legend-list">
          <li class="item"><div class="icon -first"></div><%= t 'you' %></li>
          <li class="item"><div class="icon -second"></div><%= t 'collaborators' %></li>
        </ul>
        <div class="viel"></div>
      </div>
    </div>

    <div id="map-tooltip" class="c-map-tooltip"></div>

    <div class="intro-info">
      <div class="info">
        <div class="c-personal-info">
          <div class="c-user-profile-picture -huge">
            <div class="initials"><%=  @user.name ? @user.name[0] : 'U' %></div>
            <!-- <img src="" alt="<%= @user.name %>'s profile picture'" /> -->
          </div>
          <div class="data-container">
            <h1 class="c-title -big"><%= @user.name ? @user.name : User %>
              <svg class="c-svg -medium icon icon-">
                <use xlink:href="#icon-"></use>
              </svg>
            </h1>
            <div class="professional-data">
              <ul class="work-info">
                <li>Cedars-Sinai Medical Center
                  <svg class="c-svg icon icon-">
                    <use xlink:href="#icon-"></use>
                  </svg>
                </li>
                <li>Director
                  <svg class="c-svg icon icon-">
                    <use xlink:href="#icon-"></use>
                  </svg>
                </li>
              </ul>
              <ul class="follow">
                <li><span>0</span> Following</li>
                <li><span>0</span> Followers</li>
              </ul>
              <ul class="contact">
                <li>@twitter
                  <svg class="c-svg icon icon-">
                    <use xlink:href="#icon-"></use>
                  </svg>
                </li>
                <li>LinkedInâ€¨
                  <svg class="c-svg icon icon-">
                    <use xlink:href="#icon-"></use>
                  </svg>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="c-buttons-group">
        <a class="c-button -inverse -filled btn-large"><%= t 'share_my_info' %></a>
        <div class="row-buttons">
          <%= link_to "Add " + (t 'projects'), new_user_project_path(user_id: current_user.id), { :class => "c-button -inverse" } if user_signed_in? && @user == current_user %>
          <%= link_to "Add " + (t 'posts'), "#", { :class => "c-button -inverse" } %>
          <%= link_to "Add " + (t 'events'), new_user_event_path(user_id: current_user.id), { :class => "c-button -inverse" } if user_signed_in? && @user == current_user %>
        </div>
      </div>

      <ul id="map-types" class="c-section-menu wrapper -color-0">
         <% @filters.each do |filter| %>
          <% @class = !params['type'] && filter == "projects" ? "-active" : active_param?('type', filter) %>
          <li>
            <a class="js-btn-mapmenu-type <%= @class %>" href="#" data-type="<%= filter %>"><%= t (filter) %></a>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
  <div id="content">
    <%= render(:partial => @current_type) %>
  </div>


</section>

