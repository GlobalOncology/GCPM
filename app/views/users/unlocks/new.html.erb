<div class="c-user-form wrapper">
  <h2 class="c-title">Resend unlock instructions</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
    </div>

    <div class="actions">
      <%= f.submit "Resend unlock instructions", :class => "c-button -filled" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
