<h1 class="float-left">Notifications (<%= current_user.notifications_count %>)</h1>
<p>
  <%= link_to 'Mark all as read', mark_all_as_read_notifications_path, method: :put %>
</p>
<div class="l-grid">
  <div class="row collapse">
    <% if @notifications.empty? %>
      <div class="column small-12 medium-12">
        <div class="c-card notification">
          Empty
        </div>
      </div>
    <% else %>
      <div class="column small-12 medium-12">
        <%= render @notifications %>
      </div>
    <% end %>
  </div>
</div>
