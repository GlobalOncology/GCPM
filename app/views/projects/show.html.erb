<% title @project.title %>

<section class="l-app">
  <div id="map" class="c-map"></div>
  <div class="l-app-title">
    <div class="wrapper">
      <div class="row">
        <div class="column small-8">
          <h1><%= @project.title %></h1>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="l-grid">
  <div class="wrapper">
    <div class="row collapse">
      <div class="column small-8">
        <div class="l-content">
          <article class="l-content-article">
            <%= @project.summary.html_safe %>
          </article>
        </div>
      </div>
      <div class="column small-4">
        <aside class="l-sidebar">
          <div class="sidebar-item">
            <h3><%= t 'cancer_types' %></h3>
            <ul>
              <% @project.cancer_types.each do |ct| %>
                <li><%= link_to ct.name, "/map?cancer_types[]=#{ct.id}" %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'project_types' %></h3>
            <ul>
              <% @project.project_types.each do |pt| %>
                <li><%= link_to pt.name, "/map?project_types[]=#{pt.id}" %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'location' %>(s)</h3>
            <ul>
              <% @project.addresses.each do |l| %>
                <li><%= link_to "#{l.city}, #{l.country_name}", "/map?countries[]=#{l.country_id}&group=points" %></li>
              <% end %>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'organization' %>(s)</h3>
            <ul>
              <% @project.organizations.each do |o| %>
                <li><%= link_to o.name, "/map?organizations[]=#{o.id}" %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'funding_source' %>(s)</h3>
            <ul>
              <% @project.funding_sources.each do |fs| %>
                <li><%= fs.name %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'project_lead' %>(s)</h3>
            <ul>
              <% @project.project_leads.each do |pl| %>
                <li><%= link_to pl.name, "/map?investigators[]=#{pl.id}" %></li>
              <% end %>
            </ul>
          </div>

          <div class="sidebar-item">
            <h3><%= t 'collaborator' %>(s)</h3>
            <ul>
              <% @project.secondary_investigators.each do |si| %>
                <li><%= link_to si.name, "/map?investigators[]=#{si.id}" %></li>
              <% end %>
            </ul>
          </div>
        </aside>
      </div>
    </div>
  </div>
</div>
