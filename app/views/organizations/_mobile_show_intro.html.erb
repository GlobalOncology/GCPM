<%= render 'shared/user_actions_mobile', direction: '-vertical' %>

<div class="l-app-title">
  <div class="row collapse -centered">
    <div class="column small-12 medium-8">
      <h1>
        <%= @organization.name %>
        <% if @organization.acronym != nil %>
          <br><small><%= @organization.acronym %></small>
        <% end %>
      </h1>

      <div class="row">
        <div class="column small-12 medium-6">
          <ul class="c-pipe-list">
            <li><%= @organization.organization_type.present? ? @organization.organization_type.try(:name) : '' %></li>
          </ul>
        </div>
        <div class="column small-12 medium-6">
          <ul class="c-pipe-list">
            <li>
              <%= @organization.email_address.present? ? @organization.email_address : '' %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="c-counters">
    <div class="wrapper">
      <div class="row">
        <div class="column small-12">
          <h3>Projects</h3>
          <span class="amount"><%= @projects.size %></span>
        </div>
        <div class="column small-12">
          <h3>People</h3>
          <span class="amount"><%= @people.size %></span>
        </div>
        <div class="column small-12">
          <h3>Posts</h3>
          <span class="amount"><%= @posts.size %></span>
        </div>
        <div class="column small-12">
          <h3>Network</h3>
          <span class="amount"><%= @network.size %></span>
        </div>
        <div class="column small-12">
          <h3>Funded Projects</h3>
          <span class="amount"><%= @funded_projects.size %></span>
        </div>
        <div class="column small-12">
          <h3>Events</h3>
          <span class="amount"><%= @events.size %></span>
        </div>
      </div>
    </div>
  </div>
</div>
