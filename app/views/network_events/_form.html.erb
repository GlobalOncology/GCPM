<span class="user-manual"><%= link_to (t 'download'), download_user_manual_path, class: "-color-1 f-user-manual", download: 'User Manual', data: {turbolinks: false}, title: "User Manual" %></span>
<div class="c-section-intro">
  <%= form.input :title, label: @event.title.presence || "Event title_", label_html: { class: 'c-title -bigger -bold -hide-edited' }, :required => false, input_html: { class: '-editable'}, placeholder: "Event title_", value: @event.title.presence || "Event title_"  %>
</div>
<div class="c-section-container">
  <div class="c-section-half -left">
    <h3 class="c-section-title">Description</h3>
    <%= form.input :description, label: "#{@event.description}", label_html: { class: '-hide-edited' }, :required => false, input_html: {value: "#{@event.description}", class: '-editable', rows: '40', placeholder: "Description"} %>
  </div>
  <div class="c-section-half">
    <div class="c-pickadate">
      <%= form.input :start_date, as: :string, input_html: {id: 'add-project-start_date', class: 'pickadate-input'}, label_html: { class: 'c-section-title' }%>
      <div id="pickadate-start-container" class="pickadate-container" autofocus></div>
    </div>
    <span class="separator"></span>
    <div class="c-pickadate">
      <%= form.input :end_date, as: :string, input_html: {id: 'add-project-end_date', class: 'pickadate-input'}, label_html: { class: 'c-section-title' } %>
      <div id="pickadate-end-container" class="pickadate-container" autofocus></div>
    </div>
    <span class="separator"></span>
    <%= form.input :website, as: :string, label: 'website', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: 'http://example.org/', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <h3 class="c-section-title">Excerpt</h3>
    <%= form.input :excerpt, label: "#{@event.excerpt}", label_html: { class: '-hide-edited' }, :required => false, input_html: {value: "#{@event.excerpt}", class: '-editable', rows: '40', placeholder: "Excerpt"} %>
    <span class="separator"></span>
    <%= form.input :participants, as: :string, label: 'participants', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: 'New York', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <h3 class="c-section-title">Private</h3>
    <%= form.check_box :private, as: :string, label: 'private', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: 'New York', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <h3 class="c-section-title">Online</h3>
    <%= form.check_box :online, as: :string, label: 'online', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: 'New York', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <%= form.input :address, as: :string, label: 'address', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: 'New York', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <%= form.input :address2, as: :string, label: 'address2', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: 'New York', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <%= form.input :city, as: :string, label: 'city', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: 'New York', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <%= form.input :country, as: :collection_select, collection: Country.names, label: 'country', label_html: { class: 'c-section-title -one-line'}, input_html: {class: 'chosen-select', multiple: false} %>
    <span class="separator"></span>
    <%= form.input :postcode, as: :string, label: 'postcode', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: '123456', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <%= form.input :longitude, as: :string, label: 'longitude', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: '12.2343', class: '-input-line'}, :required => false %>
    <span class="separator"></span>
    <%= form.input :latitude, as: :string, label: 'latitude', label_html: { class: 'c-section-title -one-line'}, input_html: {placeholder: '2.3896', class: '-input-line'}, :required => false %>
  </div>
</div>

