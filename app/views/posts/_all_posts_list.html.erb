<% if items && items.size() > 0 %>
  <% items.each do |p| %>
      <div class="c-card">
        <h3>
          <span class="post-title"><%= link_to p.title, p %></span>
          <span class="post-date"><%= p.updated_at.strftime("%B %e, %Y") %></span>
        </h3>
        <p><%= p.body && truncate_html(p.body, :length => 300, :omission => "...").html_safe %></p>
      </div>
  <% end %>
<% else %>
  <div class="c-card">
    <p>No posts</p>
  </div>
<% end %>
<% if more %>
  <div class="c-card">
    <% page = @page + 1 %>
    <%= link_to (t 'show_more'),
      {
        :params => request.query_parameters.merge({ page: page })
      },
      class: "c-btn -circle",
      id: 'showMoreButton',
      remote: true
    %>
  </div>
<% end %>
